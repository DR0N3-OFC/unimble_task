@page "/User/Edit"
@model TODOFront.Pages.User.Edit
@{
    ViewData["Title"] = "Unimble Task - Editar perfil";
}

<head>
    <link rel="stylesheet" href="~/css/user/edit.css" type="text/css" />
</head>

<div class="wrapper">
    <div class="form-container">
        <h2>Cadastre-se</h2>
        <hr>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserToEdit.UserId" />
            <div class="form-group">
                <label asp-for="UserToEdit.UserName">Usuário:</label>
                <input asp-for="UserToEdit.UserName" type="text" class="form-control" value="@Model.UserToEdit.UserName">
                <span asp-validation-for="UserToEdit.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserToEdit.Email">E-mail:</label>
                <input asp-for="UserToEdit.Email" type="email" class="form-control" value="@Model.UserToEdit.Email" readonly>
                <span asp-validation-for="UserToEdit.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Nova senha:</label>
                <input asp-for="Password" type="password" class="form-control" value="" >
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirme sua senha:</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" value="">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block" value="Salvar alterações" />
                <a asp-page="/User/Profile" class="btn btn-secondary btn-block">Cancelar</a>
            </div>
        </form>
    </div>
</div>