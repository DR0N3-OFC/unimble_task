@page "/Tasks/Edit/{id:int}"
@model TODOFront.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Unimble Task - Editar tarefa";
}

<head>
    <link rel="stylesheet" href="~/css/tasks/edit.css" type="text/css" />
</head>

<div class="wrapper">
    <div class="form-container">
        <h2>Editar tarefa</h2>
        <hr>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskToEdit.TaskId" />
            <input type="hidden" asp-for="TaskToEdit.OrganizerId" />
            <div class="form-group">
                <label asp-for="TaskToEdit.Description">Nome:</label>
                <input asp-for="TaskToEdit.Description" type="text" class="form-control" value="@Model.TaskToEdit.Description">
                <span asp-validation-for="TaskToEdit.Description" class="text-danger"></span>
            </div>
            <div class="form-group buttons">
                <input type="submit" class="btn btn-primary btn-block" value="Editar" />
                <a asp-page="/Tasks/Index" class="btn btn-secondary btn-block">Cancelar</a>
            </div>
        </form>
    </div>
</div>